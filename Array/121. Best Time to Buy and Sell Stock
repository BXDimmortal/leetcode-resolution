class Solution {                            //--------------注意题目里的要求，后面的必须比前面的大，这样才可以产生正值，不然就直接不买卖
public:                                     //--------------用两个变量分别记录前面几天的最小值和已经可以得到得最大收益，利用一个for循环对
    int maxProfit(vector<int>& prices) {    //--------------对数组进行遍历，最后得到的res值就是最后结果
        int res=0,n = prices.size();
        if(n<2) return 0;
        int min= prices[0];
        for(int i=1;i<n;++i){
            if(prices[i]-min>res) {
                res= prices[i]-min;
            }else if(prices[i]<min){
                min = prices[i];
            }
        }
        return res;
    }
};
